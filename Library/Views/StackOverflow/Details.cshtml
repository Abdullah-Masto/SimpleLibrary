@model SimpleLibrary.Services.Question

@{
    ViewData["Title"] = "Question Details";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-header">
            <h2>@Model.Title</h2>
        </div>
        <div class="card-body">
            <div>@Html.Raw(Model.Body)</div>
            <a href="@Model.Link" class="btn btn-primary" target="_blank">View on StackOverflow</a>
        </div>
    </div>
</div>
